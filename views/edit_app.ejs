<% include ./common/head %>
<% include ./common/header %>
<% include ./common/sidebar %>
<div class="content-wrapper">
  <% 
      object = decodeObject(object)
      function decodeObject (obj) {for (var key in obj) {if (obj.hasOwnProperty(key)) {if(typeof obj[key] == 'object'){if(obj[key] instanceof Array){for(var j=0;j<obj[key].length;j++){if(typeof obj[key][j]=='object') {obj[key][j] = decodeObject(obj[key][j])}else{obj[key][j]=  decodeURIComponent(decodeURIComponent(obj[key][j]))}}}else{obj[key] = decodeObject(obj[key]);}}else {obj[key] = decodeURIComponent(decodeURIComponent(obj[key]))}}}return obj;}
  %>
  <section class="content">
      <div class="row">
        <div class="col-md-5">
          <div class="box box-success">
              <div class="box-header with-border">
                <h3 class="box-title">Update Application</h3>
              </div>
                <form role="form" class="form-horizontal">
                  <div class="box-body">
                      <div class="form-group"> 
                          <div class="col-sm-4 control-label">
                            <input onchange="loadFile(event)" style="display:none;" id="file" name="file" type="file" accept="image/*"/>
                            <button id="btnAddMedia" class="btn btn-primary btn-sm btn-success" type="button" style="padding:0px 5px;margin-top: 35px" onclick="document.getElementById('file').click();">App Icon</button>
                            
                          </div>
                          <div class="col-sm-8">
                          <% if (object.url) { -%>
                              <img class="img-rounded" style="height: 80px;width: 80px;background: #999" src="<%=object.url%>" id="image">
                          <% }else{-%>
                              <img class="img-rounded" style="height: 80px;width: 80px;background: #999" id="image">
                          <% }-%>
                          </div>
                      </div> 
                      <div class="form-group">
                        <label class="col-sm-4 control-label">Name : </label>
                        <div class="col-sm-8">
                          <input type="text" placeholder="Application name" id="name" class="form-control" value="<%=object.name%>">
                        </div>
                      </div>

                      <div class="form-group">   
                        <label class="col-sm-4 control-label">Default Type : </label>
                        <div class="col-sm-8">
                          <select id="postType" name="postType" class="form-control">
                            <% if (object.defaultType === "youtube") { -%>
                                  <option selected="" value="youtube">Youtube</option>
                                  <option value="text">Text</option>
                                  <option value="image">Image</option>
                                  <option value="video">Video</option>
                                  <option value="news">News</option>
                            <% } else if (object.defaultType === "text") { -%>
                                  <option value="youtube">Youtube</option>
                                  <option selected="" value="text">Text</option>
                                  <option value="image">Image</option>
                                  <option value="video">Video</option>
                                  <option value="news">News</option>
                            <% } else if (object.defaultType === "image") { -%>
                                  <option value="youtube">Youtube</option>
                                  <option value="text">Text</option>
                                  <option selected="" value="image">Image</option>
                                  <option value="video">Video</option>
                                  <option value="news">News</option>
                            <% } else if (object.defaultType === "video") { -%>
                                  <option value="youtube">Youtube</option>
                                  <option value="text">Text</option>
                                  <option value="image">Image</option>
                                  <option selected="" value="video">Video</option>
                                  <option value="news">News</option>
                            <% } else{ -%>
                                  <option value="youtube">Youtube</option>
                                  <option value="text">Text</option>
                                  <option value="image">Image</option>
                                  <option value="video">Video</option>
                                  <option selected="" value="news">News</option>
                            <% } -%>
                          </select>
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-4 control-label">App Version : </label>
                        <div class="col-sm-8">
                          <input type="text" placeholder="Application Version (optional)" id="appVersion" class="form-control" value="<%=object.appVersion%>">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-4 control-label">Company Name : </label>
                        <div class="col-sm-8">
                          <input type="text" placeholder="Company name (optional)" id="companyName" class="form-control"  value="<%=object.companyName%>">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-4 control-label">FB Access Token : </label>
                        <div class="col-sm-8">
                          <input type="text" placeholder="Facebook Access Token (optional)" id="fbAccesstoken" class="form-control" value="<%=object.facebookAccessToken%>">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="col-sm-4 control-label">FB Post Path : </label>
                        <div class="col-sm-8">
                          <input type="text" placeholder="Facebook Post Path (optional)" id="fbPostPath" class="form-control" value="<%=object.facebookPostPath%>">
                        </div>
                      </div>
                      <label style="color:red; width: 100%;text-align: center;" id="error">&nbsp;</label>
                  </div>
                  <div class="box-footer">
                    <button class="btn btn-primary btn-lg btn-block btn-success" onclick="addAction()" type="button">Update Application</button>
                  </div>
                </form>
              </div>
              <!-- /.box -->
        </div>
      </div>
    <!-- /.row -->
  </section>

  <!-- Confirmaion -->
  <div class="modal fade" style = "padding-top:15%" id="confirmaionModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
    <div class="modal-dialog modal-sm" role="document">
      <div class="modal-content">
          <div class="modal-header">
            <h4 class="modal-title">Image should be 400x400 !</h4>
          </div>
          <div class="modal-footer">
            <label hidden="true" id="lblCategoryId"></label>
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary" onclick="uploadImage()" id="btnSend">Continue</button>
          </div>
        </div>
    </div>
  </div>

  <!-- Loading modal -->
  <div class="modal fade" style = "padding-top:15%" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
      <div class="modal-content" style="padding:10px;width: 50px;margin: 0 auto;border-radius: 5px">
            <div class="fa fa-spinner fa-spin text-light-blue" style="font-size: 30px;"></div>
      </div>
  </div>
</div>
<!-- /.content-wrapper -->
  
<% include ./common/footer %>
<% include ./common/footer_js %>

<script>
  var objectId = "<%- object.objectId %>"
  var name,defaultType,fbAccesstoken,fbPostPath,appVersion,companyName;
  var file = undefined
  var width = 0;
  var height = 0;
  var loadFile = function(event) {
    file = event.target.files[0]
    if(file){
      var output = document.getElementById('image');
      output.src = URL.createObjectURL(file);
      var img;
      img = new Image();
      img.onload = function () {
        width = this.width;
        height  = this.height
      };
      img.src = URL.createObjectURL(file);
    }
  };
  function addAction(){
    var p = document.getElementById('error')
    name = (document.getElementById('name').value).trim();
    fbAccesstoken = (document.getElementById('fbAccesstoken').value).trim();
    fbPostPath = (document.getElementById('fbPostPath').value).trim();
    appVersion = (document.getElementById('appVersion').value).trim();
    companyName = (document.getElementById('companyName').value).trim();

    if(!name){
        p.innerHTML = "Please enter name"
        return false;
    }
    p.innerHTML = "&nbsp;"
    if((width === 400 && height === 400) || !file){
      uploadImage()
    }else{
      $('#confirmaionModal').modal('show');
    }
  }
  function uploadImage(){
    $('#confirmaionModal').modal('hide');
    $('#loadingModal').modal('show');
    if(file){
      var url = "upload"+"/app.jpg"
      $.ajax({
         url: url,
         type: "POST",
         data: file,
         processData: false,
         contentType: "admin/file",
        }).done(function( data ) {
            finalAddAction(data.name)
        }).fail(function(xhr, status, error){
            alert(xhr.responseText)
        }); 
      }else{
        finalAddAction(undefined)
      }
  }
  function finalAddAction(fileName){
      var url = 'loadData?functionName=updateApp'
      var params = {'name':name,'objectId':objectId}
      if(fileName){
        params.fileName= fileName
      }
      var dd = document.getElementById("postType")
      defaultType = dd.options[dd.selectedIndex].value;
      params.defaultType = defaultType
      if(fbAccesstoken)
        params.facebookAccessToken = fbAccesstoken
      else 
        params.facebookAccessToken = null
      if(fbPostPath)
        params.facebookPostPath = fbPostPath
      else 
        params.facebookPostPath = null
      if(appVersion)
        params.appVersion = appVersion
      else 
        params.appVersion = null
      if(companyName)
        params.companyName = companyName
      else 
        params.companyName = null
      $.post( url, params)
      .done(function( results ) {
        $('#loadingModal').modal('hide');
        window.location.href = 'app_list'
      }).fail(function(xhr, status, error){
        $('#loadingModal').modal('hide');
          alert(xhr.responseText)
      });
  }
  $(function () {
    if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|BB|PlayBook|IEMobile|Windows Phone|Kindle|Silk|Opera Mini/i.test(navigator.userAgent)) {
      // prevent virtual keyboard 
    }else{
      $(".select2").select2();
    }
  });
</script>