              <div class="info-box-content">
                <span class="info-box-text">Posts</span>
                <span class="info-box-number"><%= statistics.postCount %></small></span>
              </div>
            </a>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
          <a href="installations" style="color: inherit;">
            <span class="info-box-icon bg-red"><i class="fa fa-mobile"></i></span>

            <div class="info-box-content">
              <span class="info-box-text">Installations</span>
              <span class="info-box-number"><%= statistics.installationCount %></span>
              <span class="info-box-text"><%= statistics.installationCountTotal %> IAA</span>
            </div>
            <!-- /.info-box-content -->
            </a>
          </div>
          <!-- /.info-box -->
        </div>
