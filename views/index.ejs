        <!-- /.col -->

        <!-- /.col -->
        <% 
        var foceDisable = true
        if (!foceDisable) { -%>
              <div class="col-md-3 col-sm-6 col-xs-12">
                <div class="info-box">
                <a href="post_list_user" style="color: inherit;">
                  <span class="info-box-icon bg-blue"><i class="fa fa-flag-checkered"></i></span>
                  <div class="info-box-content">
                    <span class="info-box-text">Posts By Users</span>
                    <span class="info-box-number"><%= statistics.postByUserCountTotal %></span>
