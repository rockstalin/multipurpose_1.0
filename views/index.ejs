          <a href="app_list" style="color: inherit;">
            <span class="info-box-icon bg-purple"><i class="fa fa-adn"></i></span>
            <div class="info-box-content">
              <span class="info-box-text">Applications</span>
              <span class="info-box-number"><%= apps.length %></span>
            </div>
           </a> 
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <!-- col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <a href="api_hits" style="color: inherit;">
              <span class="info-box-icon bg-aqua"><i class="fa fa-bar-chart-o"></i></span>

              <div class="info-box-content">
                <span class="info-box-number">API Hits</span>
                <span class="info-box-text"><%= statistics.todayHitCount %> today</span>
                <span class="users-list-date">Daily API Hits by all iOS & Android Apps</span>
              </div>
            </a>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <!-- /.col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
          <button type="button" style="background: none;padding: 0px;margin: 0px;border: 0px" onclick="restart()">
            <span class="info-box-icon bg-black"><i class="fa fa-laptop"></i></span>
            <div class="info-box-content">
              <span class="info-box-number" style="width: 100%;text-align: left">Restart</span>
              <span class="users-list-date" style="width: 100%;text-align: left">NodeJS process will be restarted </span>
            </div>
          </button>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

  </section>
  <!-- /.content -->
  <!-- Loading modal -->
  <div class="modal fade" style = "padding-top:15%" id="loadingModal" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
      <div class="modal-content" style="padding:10px;width: 50px;margin: 0 auto;border-radius: 5px">
            <div class="fa fa-spinner fa-spin text-light-blue" style="font-size: 30px;"></div>
      </div>
  </div>

</div>
<!-- /.content-wrapper -->

  
<% include ./common/footer %>
<% include ./common/footer_js %>
<script>
  function restart(){
      var url = 'restart'
      $('#loadingModal').modal('show');
      $.get( url)
        .done(function( results ) {
          $('#loadingModal').modal('hide');
        }).fail(function(xhr, status, error){
            $('#loadingModal').modal('hide');
            // alert(xhr.responseText)
        });
    }
  $(function () {
    if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|BB|PlayBook|IEMobile|Windows Phone|Kindle|Silk|Opera Mini/i.test(navigator.userAgent)) {
      // prevent virtual keyboard 
    }else{
      $(".select2").select2();
    }
  });
</script>