              <div class="info-box-content">
                <span class="info-box-number" style="margin-top: 15px">Add Post</span>
              </div>
            </a>
            <!-- /.info-box-content -->
          </div>
          <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <!-- col -->
        <div class="col-md-3 col-sm-6 col-xs-12">
          <div class="info-box">
            <a href="post_list" style="color: inherit;">
